{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Sample Schema",
  "id": "Sample Unit",
  "type": "object",
  "description": "The schema of a Sample",
  "properties": {
    "t_string": {
      "type": "string",
      "description": "The type string."
    },
    "t_integer": {
      "type": "integer",
      "description": "The type integer."
    },
    "t_number": {
      "type": "number",
      "description": "The type number.",
      "minimum": 0
    },
    "t_date": {
      "type": "date",
      "description": "The type date."
    },
    "t_boolean": {
      "type": "boolean",
      "description": "The type boolean.",
      "default": true
    },
    "t_array_ref": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/t_ref"
      },
      "minItems": 1
    }
  },
  "required": [
    "t_integer",
    "t_array_ref"
  ],
  "definitions": {
    "t_ref": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "tRef",
      "type": "object",
      "description": "A definition reference.",
      "properties": {
        "ref_id": {
          "type": "string",
          "description": "The identifier of a reference."
        }
      }
    }
  }
}
